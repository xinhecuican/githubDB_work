<%- include('../partials/header');  %>

<div class="container">

    <header class="jumbotron">
        <div class="container">
            <h1>This is the campgrounds page!</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campgrounds</a>
            </p>
        </div>
    </header>

    <div class="row" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach((campground) => { %>
        <div class="col-lg-4 col-sm-6 d-flex justify-content-between">
            <div class="card text-center">
                <img src="<%= campground.img %>" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title"><%= campground.name %></h5>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-outline-primary">More info</a>
                </div>
            </div>
        </div>
        <% }) %>
    </div>

</div>

<%- include('../partials/footer'); %>