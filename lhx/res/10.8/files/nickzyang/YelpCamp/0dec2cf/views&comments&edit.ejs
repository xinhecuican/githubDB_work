<%- include('../partials/header'); %>
<div class="container">
        <h1>Edit Comment</h1>

        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
              <label for="campgroundName">Comment</label>
              <input type="text" class="form-control" id="campgroundName" name="comment[text]" value="<%= comment.text %>">
            </div>
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
          </form>
        
        <a href="/campgrounds/<%= campground_id %>">Go back</a>
</div>
<%- include('../partials/footer'); %>
